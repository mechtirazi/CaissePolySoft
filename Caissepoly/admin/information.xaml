<Window x:Class="CaissePoly.admin.information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Informations" 
           Height="700" 
   Width="1302"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDF1DC">

    <Window.Resources>
        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2980B9"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Content Style -->
        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>

        <!-- Info Card Style -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bullet Point Style -->
        <Style x:Key="BulletPointStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Fill" Value="#2980B9"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#A9D0F5" Padding="15" CornerRadius="4">
            <TextBlock Text="INFORMATIONS SUR LA CAISSE" 
                       Style="{StaticResource TitleStyle}"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
            <StackPanel>
                <!-- Application Info -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Cassti" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Caisse tactile intelligente pour la gestion complète du stock et des ventes - Version 1.0"
                                   Style="{StaticResource ContentTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Developer Info -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Développé par" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Polysoft &amp; Co - Solutions logicielles innovantes"
                                   Style="{StaticResource ContentTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Website -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Site web" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock>
                            <Hyperlink NavigateUri="https://www.polysoft.com" Foreground="#2980B9">
                                www.polysoft.com
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Features -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Fonctionnalités principales" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Interface tactile intuitive" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Gestion des stocks en temps réel" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Système de facturation intégré" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Rapports détaillés" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Sauvegarde automatique" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Support -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Support technique" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Assistance disponible 24h/7j" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Documentation complète" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Formation utilisateurs" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Style="{StaticResource BulletPointStyle}"/>
                                <TextBlock Text="Mises à jour gratuites" Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Back Button -->
        <Button Grid.Row="2" Content="Retour" 
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Left"
                Click="BackButton_Click" Margin="-25,18,0,2"/>
    </Grid>
</Window>