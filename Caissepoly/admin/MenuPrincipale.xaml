<UserControl x:Class="CaissePoly.admin.MenuPrincipale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4b6cb7" Offset="0"/>
            <GradientStop Color="#182848" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Colors -->
        <SolidColorBrush x:Key="ArticleColor">#3498db</SolidColorBrush>
        <SolidColorBrush x:Key="FamilleColor">#9b59b6</SolidColorBrush>
        <SolidColorBrush x:Key="UtilisateurColor">#e74c3c</SolidColorBrush>
        <SolidColorBrush x:Key="ParametreColor">#34495e</SolidColorBrush>
        <SolidColorBrush x:Key="BonEntreeColor">#2ecc71</SolidColorBrush>
        <SolidColorBrush x:Key="InventaireColor">#1abc9c</SolidColorBrush>
        <SolidColorBrush x:Key="InformationColor">#f39c12</SolidColorBrush>
        <SolidColorBrush x:Key="ContactColor">#16a085</SolidColorBrush>
        <SolidColorBrush x:Key="CaisseColor">#27ae60</SolidColorBrush>
        <SolidColorBrush x:Key="FermerColor">#c0392b</SolidColorBrush>

        <!-- Card Style -->
        <Style x:Key="MenuCardStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ArticleColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderBrush="White"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Icon Container (now with text emoji) -->
                                <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="10,10,0,0">
                                    <TextBlock Text="{TemplateBinding Tag}" 
                                               FontSize="36"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,10"/>
                                </Border>

                                <!-- Text Container -->
                                <Border Grid.Row="1" Background="#30FFFFFF" CornerRadius="0,0,10,10">
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               TextAlignment="Center" 
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               Margin="10,5"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Main Caisse Button Style -->
        <Style x:Key="MainCaisseCardStyle" TargetType="Button" BasedOn="{StaticResource MenuCardStyle}">
            <Setter Property="Background" Value="{StaticResource CaisseColor}"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
        </Style>

        <!-- Title Style -->
        <Style x:Key="MenuTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,30,0,20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">
                <!-- Main Title -->
                <TextBlock Text="MENU PRINCIPAL" Style="{StaticResource MenuTitleStyle}"/>

                <!-- Administration Section -->
                <TextBlock Text="🔧 ADMINISTRATION" Style="{StaticResource SectionTitleStyle}"/>

                <WrapPanel HorizontalAlignment="Center">
                    <!-- Articles -->
                    <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource ArticleColor}"
                            Content="Articles"
                            Tag="📦"  
                        Click="OnArticlesClick"/>

                        <!-- Famille -->
                        <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource FamilleColor}"
                            Content="Familles"
                            Tag="🔎"
                            Click="OnFacturationClick"/>

                            <!-- Utilisateurs -->
                            <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource UtilisateurColor}"
                            Content="Utilisateurs"
                            Tag="👤" 
                                Click="OnUtilisateursClick"/>

                                <!-- Paramètres -->
                                <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource ParametreColor}"
                            Content="Paramètres"
                            Tag="⚙️"  
                                    Click="OnParametreClick"/>
                </WrapPanel>

                <!-- Operations Section -->
                <TextBlock Text="📦 OPERATIONS" Style="{StaticResource SectionTitleStyle}"/>

                <WrapPanel HorizontalAlignment="Center">
                    <!-- Bon d'entrée/sortie -->
                    <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource BonEntreeColor}"
                            Content="Bons Entrée/Sortie"
                            Tag="🔄"  
                        Click="OnBonEntreeClick"/>

                        <!-- Inventaire -->
                        <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource InventaireColor}"
                            Content="Inventaire"
                            Tag="📋" 
                            Click="OnInventaireClick"/>
                </WrapPanel>

                <!-- Information Section -->
                <TextBlock Text="ℹ️ INFORMATIONS" Style="{StaticResource SectionTitleStyle}"/>

                <WrapPanel HorizontalAlignment="Center">
                    <!-- Information -->
                    <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource InformationColor}"
                            Content="Informations"
                            Tag="ℹ️" 
                        Click="OnInformationClick"/>

                        <!-- Contact -->
                        <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource ContactColor}"
                            Content="Contact"
                            Tag="✉️" 
                            Click="OnContactClick"/>
                </WrapPanel>

                <!-- Caisse Section -->
                <TextBlock Text="💵 CAISSE" Style="{StaticResource SectionTitleStyle}"/>

                <StackPanel HorizontalAlignment="Center">
                    <!-- Caisse principale -->
                    <Button Style="{StaticResource MainCaisseCardStyle}" 
                            Content="Caisse Principale"
                            Tag="💰"
                        Click="OnCaisseMainClick"/>

                        <!-- Fermer la caisse -->
                        <Button Style="{StaticResource MenuCardStyle}" 
                            Background="{StaticResource FermerColor}"
                            Content="Fermer Caisse"
                            Tag="🔴"  
                            Click="OnFermerCaisseClick"
                            Margin="0,20,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>