<Window x:Class="CaissePoly.admin.BonSortieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaissePoly.admin"
        xmlns:components="clr-namespace:CaissePoly.Componnents"
        mc:Ignorable="d"
        Title="Bon de Sortie - Historique des Ventes" 
          Height="700" 
   Width="1302"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#FFFDF1DC"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Column Header Style -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#A9D0F5"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#7FB3D5"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Row Style -->
        <Style x:Key="RowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Navigation Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Header -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Filter Controls -->
            <RowDefinition Height="*"/>
            <!-- Row 3: DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4: Action Buttons -->
        </Grid.RowDefinitions>

        <!-- Navigation Bar (Row 0) -->
        <components:BarreNavigation Grid.Row="0"/>

        <!-- Header (Row 1) -->
        <Border Grid.Row="1" Background="#A9D0F5" Padding="10" CornerRadius="4" Margin="0,0,0,10">
            <TextBlock Text="HISTORIQUE DES VENTES" 
                       Style="{StaticResource TitleStyle}"/>
        </Border>

        <!-- Filter Controls (Row 2) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <DatePicker Width="150" Margin="0,0,10,0" 
                        SelectedDate="{Binding StartDate}"/>
            <DatePicker Width="150" Margin="0,0,10,0" 
                        SelectedDate="{Binding EndDate}"/>
            <Button Content="Filtrer" 
                    Command="{Binding FilterCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#2ECC71"/>
            <Button Content="Réinitialiser" 
                    Command="{Binding ResetFilterCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#95A5A6"/>
        </StackPanel>

        <!-- DataGrid (Row 3) -->
        <Border Grid.Row="3" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4">
            <DataGrid ItemsSource="{Binding SortieArticles}"
          SelectedItem="{Binding SelectedVente, Mode=TwoWay}"

                      Style="{StaticResource ModernDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      RowStyle="{StaticResource RowStyle}">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="N° Ticket" Binding="{Binding TicketId}" Width="*"/>
                    <DataGridTextColumn Header="Article" Binding="{Binding Article.designation}" Width="2*"/>
                    <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding PrixUnitaire, StringFormat={}{0:N2}}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:N2}}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Date" Binding="{Binding TicketDate, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons (Row 4) -->
        <Border Grid.Row="4" Background="#ECF0F1" Padding="10" Margin="0,15,0,0" 
                BorderThickness="0,1,0,0" BorderBrush="#BDC3C7">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Exporter" 
                        Command="{Binding ExportCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#3498DB"/>
                <Button Content="Imprimer" 
                        Command="{Binding PrintCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#9B59B6"/>
                <Button Content="Retour" 
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#95A5A6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 